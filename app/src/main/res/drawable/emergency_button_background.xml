<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/emergency_accent"
                android:endColor="@color/emergency_primary"
                android:angle="135" />
            <corners android:radius="28dp" />
            <stroke
                android:width="4dp"
                android:color="@color/emergency_text" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/emergency_primary"
                android:endColor="@color/emergency_primary_light"
                android:angle="135" />
            <corners android:radius="28dp" />
            <stroke
                android:width="4dp"
                android:color="@color/emergency_accent" />
        </shape>
    </item>
</selector>
